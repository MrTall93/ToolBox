# Dockerfile for Toolbox MCP Server
FROM registry.access.redhat.com/ubi8/python-39

USER root

# Install runtime dependencies
RUN dnf install -y --setopt=install_weak_deps=False \
    libpq \
    && dnf clean all

# Create app directory
WORKDIR /app

# Create non-root user (UID 1000 is standard in OpenShift)
RUN groupadd -g 1000 appgroup && \
    useradd -u 1000 -g appgroup -d /app -s /sbin/nologin -c "Default Application User" appuser

# Copy Python packages from the main image
COPY --from=toolbox:latest /opt/app-root/lib/python3.9/site-packages/ /opt/app-root/lib/python3.9/site-packages/
COPY --from=toolbox:latest /opt/app-root/bin/ /opt/app-root/bin/

# Copy application code
COPY app/ /app/app/
COPY alembic.ini /app/
COPY alembic/ /app/alembic/
COPY scripts/ /app/scripts/

# Create directories and set permissions
RUN mkdir -p /app/tmp /app/logs && \
    chown -R 1000:0 /app && \
    chmod -R g+rwX /app

# Make scripts executable
RUN chmod +x /app/scripts/*.sh 2>/dev/null || true

# Switch to non-root user
USER 1000

# Set environment variables for non-root user
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python3.9 -c "import app.mcp_server; print('OK')" || exit 1

# Update PATH for UBI8
ENV PATH="/opt/app-root/bin:$PATH"

# Run the MCP server
CMD ["python3.9", "-m", "app.mcp_server"]